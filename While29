#include <iostream>
#include <cmath>

using namespace std;

int main()
{
    double e;
    cout << "Введите вещественное число e: ";
    cin >> e;

    double A1 = 1, A2 = 2;
    double Ak = A2 + 2 / (4 * A2 - 3); // вычисляем третий элемент
    int k = 3; // номер третьего элемента

    while (abs(Ak - A2) >= e) // пока выполняется условие
    {
        A1 = A2;
        A2 = Ak;
        k++;
        Ak = A2 + 2 / (4 * A2 - 3);
    }

    cout << "Номер K: " << k << endl;
    cout << "A(k-1): " << A2 << endl;
    cout << "A(k): " << Ak << endl;

    return 0;
}
