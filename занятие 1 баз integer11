#include <iostream>
using namespace std;
int main()
{
	int a, ed, des, sotni, summa, proiz;
	cout << "Введите трехзначное число " << endl;
	cin >> a;
	ed = a % 100 % 10;
	des = a % 100 / 10;
	sotni = a/100;
	summa = ed + des + sotni;
	proiz = ed * des * sotni;
	cout << "Сумма цифр равна " << summa << endl;
	cout << "Произведение цифр равно " << proiz << endl;
	return 0;
}
