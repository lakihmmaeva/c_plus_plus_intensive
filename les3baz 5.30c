#include <iostream>
using namespace std;

int main() {
    int n, sum = 0;
    cout << "Введите значение n (1 <= n <= 100): ";
    cin >> n;
    for (int i = 1; i <= n; i++) {
        sum += i * i;
    }
    cout << "Сумма квадратов всех целых чисел от 1 до " << n << ": " << sum << endl;
    return 0;
}
