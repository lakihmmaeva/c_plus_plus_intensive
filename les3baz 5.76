#include <iostream>

int main(){
	int a;
	cout << "Enter a: ";
	cin >> a;
	int a_n = a;
	int n;
	cout << "Enter n: ";
	cin >> n;
	if (n <= 1){
		cout << "Error";
		return 0;
	}
	cout << a << " in 1 = " << a_n << endl;
	for(int i = 2; i <= n; i++){ 
		a_n *= a;
		cout << a << " in " << i << " = " << a_n << endl;	
	}
	return(0);
}

