#include <iostream>

using namespace std;

int main() {

    double price;

    cout << "Enter the price of 1 kg of candy: ";

    cin >> price;

    cout << "Weight\tCost" << endl;

    for (int weight = 100; weight <= 2000; weight += 100) {

        double cost = price * weight / 1000;

        cout << weight << "g\t$" << cost << endl;

    }

    return 0;

}
