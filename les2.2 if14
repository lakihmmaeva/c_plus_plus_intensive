#include <iostream>
using namespace std;

int main() {
  int a, b, c;
  cout << "Введите три числа: ";
  cin >> a >> b >> c;

  // Находим наименьшее число с помощью if
  int min = a;
  if (b < min) min = b;
  if (c < min) min = c;

  // Находим наибольшее число с помощью if
  int max = a;
  if (b > max) max = b;
  if (c > max) max = c;

  // Выводим результаты
  cout << "Наименьшее число: " << min << endl;
  cout << "Наибольшее число: " << max << endl;

  return 0;
}
