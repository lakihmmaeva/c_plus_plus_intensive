#include <iostream>
using namespace std;

int main() {
    float x, y;
    cout << "Введите координаты точки: ";
    cin >> x >> y;

    if (x > 0 && y > 0) {
        cout << "Точка находится в первой координатной четверти";
    } else if (x < 0 && y > 0) {
        cout << "Точка находится во второй координатной четверти";
    } else if (x < 0 && y < 0) {
        cout << "Точка находится в третьей координатной четверти";
    } else if (x > 0 && y < 0) {
        cout << "Точка находится в четвертой координатной четверти";
    } else {
        cout << "Точка лежит на координатных осях";
    }

    return 0;
}
