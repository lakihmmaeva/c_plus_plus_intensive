#include <iostream>
int main() {
std::cout << ((500 * (500 + 1)) >> 1) - ((100 * (100 + 1)) >> 1) << std::endl;
std::cin.get();
}


3 базовый ----5.36

#include <iostream>
#include <math.h>

using namespace std;

int main() {

double x = 2.0;
double sum = 0.0;

for (int i = 1; i <= 11; i += 2) {
    sum += pow(x, i) / i;
}

cout << "Sum of the series is: " << sum << endl;

return 0;
}
