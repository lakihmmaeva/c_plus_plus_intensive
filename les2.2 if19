#include <iostream>
using namespace std;

int main() 
{
    int a, b, c, d;
    int position;

    cout << "Введите четыре целых числа: " << endl;
    cin >> a >> b >> c >> d;

    if (a == b && b == c) 
    {
        position = 4;
    } 
    else if (b == c && c == d) 
    {
        position = 1;
    } 
    else if (a == c && c == d) 
    {
        position = 2;
    } 
    else if (a == b && b == d) 
    {
        position = 3;
    }

    cout << "Позиция числа, которое отличается от всех остальных: " << position << endl;

    return 0;
}
