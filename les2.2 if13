#include <iostream>
using namespace std;

int main() {
    int a, b, c;
    cout << "Введите три числа: ";
    cin >> a >> b >> c;

    int min = a, max = a, mid = a;

    if (b < min) {
        min = b;
    }
    if (c < min) {
        min = c;
    }

    if (b > max) {
        max = b;
    }
    if (c > max) {
        max = c;
    }

    if (a != min && a != max) {
        mid = a;
    }
    if (b != min && b != max) {
        mid = b;
    }
    if (c != min && c != max) {
        mid = c;
    }

    cout << "Среднее число: " << mid << endl;

    return 0;
}
