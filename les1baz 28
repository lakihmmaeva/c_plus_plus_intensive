#include <iostream>
#include <math.h>
using namespace std;
int main()
{
    float a, b, c, P;
    cout << "Введите катет a" << endl;
    cin >> a;
    cout << "Введите катет b" << endl;
    cin >> b;
    c = sqrt(a*a + b*b);
    P = a+b+c;
    cout << "Периметр треугольника равен: " << P << endl;
    return 0;
}
