#include <iostream>
#include <cmath>

using namespace std;

int main() {
    const double G = 6.672 * pow(10, -11); // гравитационная постоянная
    const double M = 5.96 * pow(10, 24); // масса Земли
    const double R = 6.37 * pow(10, 6); // радиус Земли

    double h; // высота над поверхностью Земли
    double g; // ускорение свободного падения

    cout << "Введите высоту над поверхностью Земли (м): ";
    cin >> h;

    g = G * M / pow(R + h, 2); // расчет ускорения свободного падения

    cout << "Ускорение свободного падения на высоте " << h << " м над поверхностью Земли равно " << g << " м/с^2" << endl;

    return 0;
}
