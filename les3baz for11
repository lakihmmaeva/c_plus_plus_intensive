#include <iostream>
using namespace std;

int main() {
    int N;
    long long sum = 0;
    cout << "Enter an integer N: ";
    cin >> N;
    for(int i = N; i <= 2 * N; i++) {
        sum += i * i;
    }
    cout << "Sum of N^2 + (N+1)^2 + (N+2)^2 + ... + (2N)^2 is: " << sum << endl;
    return 0;
}
