#include <iostream>
using namespace std;

int main() {
   double n;
   cout << "Введите число n: ";
   cin >> n;
   
   int i = 1; // начинаем считать сумму с 1-го числа
   double sum = 1.0; // переменная для хранения суммы
   
   while (sum <= n) { // пока сумма меньше или равна n
      i++; // переходим к следующему значению i
      sum += 1.0 / i; // добавляем очередное число в сумму
   }
   
   cout << "Первое число, большее " << n << ": " << sum << endl;
   
   return 0;
}

