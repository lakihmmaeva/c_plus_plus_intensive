#include <iostream>
#include <math.h>
using namespace std;
int main()
{
    float l, r, S, pi = 3.14;
    cout << "Введите радиус окружности" << endl;
    cin >> r;
    l = 2*pi*r;
    S = pi*r*r;
    cout << "Длина окружности равна " << l << endl;
    cout << "Площадь круга равна " << S << endl;
    return 0;
}
