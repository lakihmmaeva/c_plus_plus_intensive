#include <iostream>
using namespace std;

int main() {
    double a, b, c;
    cout << "Введите три числа: ";
    cin >> a >> b >> c;

    if (a < b && b < c) {
        a *= 2;
        b *= 2;
        c *= 2;
    } else {
        a = -a;
        b = -b;
        c = -c;
    }

    cout << "Новые значения: " << a << ", " << b << ", " << c << endl;
    return 0;
}
