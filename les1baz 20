#include <iostream>
#include <math.h>
using namespace std;
int main()
{
    float r, l, C, pi=3.14;
    cout << "Введите радиус окружности" << endl;
    cin >> r;
    l = pi*r*r;
    C = 2*pi*r;
    cout << "Длина окружности равна: " << l << endl; 
    cout << "Площадь круга равна: " << C << endl;
    return 0;
}
